{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Iniciar Servidor",
      "skipFiles": ["<node_internals>/**"],
      "program": "${workspaceFolder}/src/server.ts", // Altere para o caminho do seu servidor
      "preLaunchTask": "npm: build", // Gera o build antes de executar
      "outFiles": ["${workspaceFolder}/dist/**/*.js"] // Mapear para debugging de arquivos compilados
    }
  ]
}
